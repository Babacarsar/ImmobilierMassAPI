{
  "kind": "collectionType",
  "collectionName": "listings",
  "info": {
    "singularName": "listing",
    "pluralName": "listings",
    "displayName": "Listing "
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "district": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "listing"
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Appartement",
        "Terrain"
      ]
    },
    "dealType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Location",
        "Vente"
      ]
    },
    "Statut": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Disponible",
        "Non Disponible"
      ]
    },
    "price": {
      "type": "biginteger",
      "required": true
    },
    "Currency": {
      "type": "enumeration",
      "required": true,
      "default": "FCFA",
      "enum": [
        "FCFA",
        "EUR",
        "USD"
      ]
    },
    "SurfaceM2": {
      "type": "integer",
      "required": true
    },
    "rooms": {
      "type": "integer"
    },
    "bedrooms": {
      "type": "integer"
    },
    "bathrooms": {
      "type": "integer"
    },
    "description": {
      "type": "blocks"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    }
  }
}
